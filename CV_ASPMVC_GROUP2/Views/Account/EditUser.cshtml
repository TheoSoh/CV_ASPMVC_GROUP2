@model EditUserViewModel


    <h1>Redigera användare</h1>

    <form method="post" asp-controller="Account" asp-action="EditUser" class="mt-3">

        <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label">Förnamn</label>
        <br />
        <div class="col-sm-10">
          @*   sätter inputvärdet till "FirstName", det vill säga att förnamnet på användaren kommer visas i formumäret vid ändring av det *@
            <input asp-for="FirstName" class="form-control" value="@Model.FirstName">
            <br />
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <br />
        </div>
        </div>

        <div class="form-group row">
        <label asp-for="LastName" class="col-sm-2 col-form-label">Efternamn</label>
        <br />
        <div class="col-sm-10">
            @*   sätter inputvärdet till "LastName", det vill säga att efternamnet på användaren kommer visas i formumäret vid ändring av det *@
            <input asp-for="LastName" class="form-control" value="@Model.LastName">
            <br />
            <span asp-validation-for="LastName" class="text-danger"></span>
            <br />
        </div>
        </div>

        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label">Epost</label>
            <br />
            <div class="col-sm-10">
            @*   sätter inputvärdet till "Email", det vill säga att email på användaren kommer visas i formumäret vid ändring av det *@
                <input asp-for="Email" class="form-control" value="@Model.Email">
                <br />
                <span asp-validation-for="Email" class="text-danger"></span>
                <br />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Telefonnummer</label>
            <br />
            <div class="col-sm-10">
            @*   sätter inputvärdet till "PhoneNumber", det vill säga att telefonnumret på användaren kommer visas i formumäret vid ändring av det *@
                <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber">
                <br />
            </div>
        </div>



        <div class="form-group row">
        <button type="submit" class="btn btn-primary">Uppdatera</button>

        <div asp-validation-summary="All" class="text-danger"></div>

        </div>
        <a class="btn btn-light" asp-action="Index" asp-controller="Profile">Tillbaka</a>
  
  </form>