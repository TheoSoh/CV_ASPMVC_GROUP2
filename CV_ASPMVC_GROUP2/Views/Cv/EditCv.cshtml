@model CV_ASPMVC_GROUP2.Models.Cv

<h1>Redigera Cv</h1>

<form method="post" asp-action="EditCv" asp-controller="Cv" enctype="multipart/form-data" class="mt-3">
    <div class="form-group row">
        <div class="col-sm-2">
            <label> Bild: </label>
        </div>
        <div class="col-sm-4">
            <input type="File" asp-for="@Model.ImageFile" value="@Model.ImageFile" class="custom-file-input" />
            <label class="custom-file-label" for="customFile">Välj fil</label>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="@Model.Description" class="col-sm-2 col-form-label">Beskrivning:</label>
        <br />
        <div class="col-sm-10">
            <input asp-for="@Model.Description" class="form-control" value="@Model.Description">
            <br />
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
            <br />
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Redigera Cv</button>
        </div>
    </div>
</form>
