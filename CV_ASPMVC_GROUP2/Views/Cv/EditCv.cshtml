@model CV_ASPMVC_GROUP2.Models.ShowCvViewModel

 <h1>Redigera Cv</h1>

 <form method="post" asp-controller="Cv" asp-action="EditCv" class="mt-3">
    <div class="form-group row">
        <div class="col-sm-2">
            <label> Bild: </label>
        </div>
        <div class="col-sm-4">
            <input type="File" asp-for="Cv.ImageFile" value="@Model.Cv.ImageFile" class="custom-file-input" />
            <label class="custom-file-label" for="customFile">Välj fil</label>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="Cv.Description" class="col-sm-2 col-form-label">Beskrivning:</label>
    <br />
        <div class="col-sm-10">
            <input asp-for="Cv.Description" class="form-control" value="@Model.Cv.Description">
            <br />
            <span asp-validation-for="Cv.Description" class="text-danger"></span>
            <br />
        </div>
        </div>
    <div class="form-group row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Redigera Cv</button>
        </div>
    </div>
 </form>
