@model Message 

<h2>Skicka meddelande</h2>

<form asp-action="SendMessage" asp-controller="Message" method="post">
    <input type="hidden" asp-for="ToUserId" />

    <div class="form-group">
        <label for="ToUserId">Mottagarens ID:</label>
        <textarea class="form-control form-control-sm" asp-for="ToUserId"></textarea>
    </div>

    <div class="form-group">
        <label for="Content">Meddelande:</label>
        <textarea class="form-control" asp-for="Content"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Skicka</button>
</form>
