@model Message

<h2>Skicka meddelande</h2>

<form asp-action="SendMessage" asp-controller="Message" method="post">
    <div class="form-group">
        <label for="ToUserId">Välj mottagare:</label>
        @Html.DropDownListFor(model => model.ToUserId, ViewData["ToUserId"] as SelectList, "-- Välj en användare --", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Content">Meddelande</label>
        <textarea name="Content" class="form-control">@Model.Content</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Skicka meddelande</button>
</form>