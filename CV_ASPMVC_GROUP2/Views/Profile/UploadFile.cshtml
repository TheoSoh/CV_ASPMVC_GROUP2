@model ProfileViewModel

@{
    ViewData["Title"] = "Add Profile-pic";
}


<h1> Hantera profilbild</h1>

<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" asp-controller="Profile" asp-action="UploadFile" enctype="multipart/form-data">

    <div class="form-group row">
        <div class="col-sm-2">
            <label> Profilbild: </label>
        </div>
        <div class="col-sm-4">
            <input type="File" asp-for="ImageFile" class="custom-file-input" />
            <label class="custom-file-label" for="customFile">Välj fil</label>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Lägg till profilbild</button>
        </div>
    </div>

    <a asp-action="Index" asp-controller="Profile">Tillbaka</a>

</form>
