@model ProjectViewModel
@{
    ViewData["Title"] = "Add Project-page";
}

<div class="CreateProject">

    <h1>Skapa nytt Projekt</h1>

    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post" asp-action="Create">
        <div class="form-group row">
            <div class="col-sm-2">
                <label>Titel: </label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Title" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <label>Beskriving: </label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Description" class="form-control" />
            </div>
        </div>
       
        <div class="form-group row">
            <div class="col-sm-2">
                <label> Bild: </label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Image" class="custom-file-input"/>
                <label class="custom-file-label" for="customFile">Välj fil</label>
            </div>
        </div>

       
        <div class="form-group row">
            <div class="offset-2 col-sm-4">
                <button type="submit" class="btn btn-primary">Skapa projekt</button>
            </div>
        </div>
    </form>
</div>